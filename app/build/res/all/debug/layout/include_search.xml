<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/item_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/coverImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher"
                android:textAlignment="center"
                android:scaleType="fitCenter" />

            <ProgressBar
                android:id="@+id/coverProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/coverTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text="Carregando..."
            android:ellipsize="end"
            android:textAlignment="center"
            android:layout_marginLeft="3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_more"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/moreTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text="Carregar Mais"
            android:ellipsize="end"
            android:gravity="center" />

        <ProgressBar
            android:id="@+id/moreProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleSmall"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Projetos/Android/livros-ti/app/src/main/res/layout/include_search.xml -->